<div class="container">
  <% if @article.user %>
    <ul class="listing">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <h4>Created By </h4>
          <li><%= link_to gravater_for(@article.user), user_path(@article.user) %></li>
          <li><%= link_to @article.user.username, user_path(@article.user)%></li>
          <li><small><%= pluralize(@article.user.articles.count,'article') if @article.user.articles %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <h2><%= @article.title %></h2>
  <div class="panel panel-default">
    <div class="panel-body"><%= simple_format(@article.description) %></div>
  </div>
  <%= link_to  "All Post", articles_path, class: "btn btn-xs btn-primary" %>
  <% if logged_in? && current_user == @article.user %>
    <%= link_to  "Delete Post", article_path(@article), method: :delete,
                  data: {confirm: 'Are you want to delete?'}, class:'btn btn-danger' %>
    <%= link_to  "Edit post", edit_article_path(@article), class: "btn btn-xs btn btn-success" %>
  <% end %>
</div>

